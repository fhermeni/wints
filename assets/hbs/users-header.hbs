<thead>
    <tr>
        <th class="sorter-false"><input type='checkbox' class="globalSelect" data-context="table-users"/></th>
        <th>Lastname, Firstname</th><th>Email</th>
        <th>Role</th><th>Last visit</th><th class="sorter-false">Actions</th>
    </tr>
</thead>
<tbody>
{{#each this}}
