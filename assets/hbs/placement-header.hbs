{{#if Errors.Warnings}}
<div id="feeder-issue" class="alert alert-warning">
 <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h5>Warning:</h5>
    <ul>
    {{#each Errors.Warnings}}
        <li>{{.}}</li>
    {{/each}}
    </ul>        
</div>
{{/if}}

<h3>{{len Students}} Student(s) - <small><span id="placed_cnt">{{Ints}}</span> / <span id="managed_cnt">{{Managed}}</span> placed</small></h3>

<button type="button" class="btn btn-default btn-sm" onclick="userMailing('#table-placement')">
    <i class="glyphicon glyphicon-envelope"></i> mail selection
</button>

<button type="button" onclick="showRawFullname('tbody','stu')" data-toggle='modal' class="btn btn-default btn-sm">
    <i class="glyphicon glyphicon-list"></i> fullname from selection
</button>    

<table class="table table-hover tablesorter" id="table-placement" data-sortlist="[[1,0]]">
<thead>
    <tr>
        <th class="sorter-false"><input type='checkbox' class="globalSelect" data-context="table-placement"/></th>
        <th>Lastname, Firstname</th>
        <th>Managed</th>        
        <th>Promotion</th>        
        <th>Major</th>
        <th class="col-md-2">Company</th>
        <th>Period</th>
        <th>Tutor</th>
        <th>Gratif.</th>       
    </tr>
</thead>
<tbody>
{{#each Students}}
    {{> placement-student this}}
{{/each}}
</tbody>
</table>