<h3>Service</h3>

<button type="button" class="btn btn-default btn-sm" onclick="userMailing('#table-service')">
    <i class="glyphicon glyphicon-envelope"></i> mail selection
</button>

<button type="button" onclick="showRawFullname('tbody','user')" data-toggle='modal' class="btn btn-default btn-sm">
    <i class="glyphicon glyphicon-list"></i> fullname from selection
</button>

<table class="table table-hover tablesorter" id="table-service">
    <thead>
    <tr>
        <th class="sorter-false">
        <input type='checkbox' data-toggle='checkbox' class='globalSelect' data-context="table-service"/>
        </th>
        <th>Person</th>
        <th>Tutored students</th>
        <th>Defense committees</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
        <tr data-email="{{@key}}">
            <td>
                <input class="shiftSelectable" type='checkbox' data-user-fn='{{fullname U.Person true}}' data-email='{{U.Person.Email}}' />
            </td>
            <td class="text-left fn">
                {{> person U.Person}}
            </td>
            <td data-text="{{TotalInts}}">
            {{#each Ints}}
                {{len this}} {{@key}}{{#unless @last}} ; {{/unless}}
            {{/each}}
            </td>
            <td>{{Defs}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>