<div class="modal-dialog">
<div class="modal-content"> 
    <div class="modal-body">
        <button type="button" class="close" aria-hidden="true" onclick="hideModal()">Ã—</button>
        <legend>Over {{Nb}}: {{len Errors}} failure(s); {{len Ignored}} ignored</legend>   
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Student</th><th>Email</th><th>Promotion</th><th>Status</th>
            </tr>
        </thead>
        {{#each Errors}}
            <tr>
                <td>{{fullname Student.User.Person}}</td>
                <td>{{Student.User.Person.Email}}</td>
                <td>{{Student.Promotion}} / {{Student.Major}}</td>                
                <td>{{Reason}}</td>
            </tr>
        {{/each}}
        {{#each Ignored}}
            <tr class="warning">
                <td>{{fullname Student.User.Person}}</td>
                <td>{{Student.User.Person.Email}}</td>
                <td>{{Student.Promotion}} / {{Student.Major}}</td>                                
                <td>{{Reason}}</td>
            </tr>
        {{/each}}
        </table>
        <div class="text-right form-group">
            <button type="button" class="btn btn-default" onclick="hideModal()">Close</button>            
        </div>
    </div>    
</div>    
</div>
        