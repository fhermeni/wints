{{#if this}}
<h3>{{len this}} internships
<button type="button" class="btn btn-primary" onclick="mailing('tutor')">
    <i class="glyphicon glyphicon-envelope"></i>
    mail selection
</button>
<!--<button type="button" class="btn" onclick="showRawFullname()">
    <i class="glyphicon glyphicon-list"></i>
    selection fullname
</button>-->
</h3>

<div class="legend">
<span class="title">Reports color legend</span>
<ul class="legend">
<li><span class="color btn-warning"></span>Deadline passed, no reports</li>
<li><span class="color btn-primary"></span>Deadline passed, waiting for being reviewed</li>
<li><span class="color btn-success"></span>grade > 10</li>
<li><span class="color btn-danger"></span>grade < 10</li>
</ul>
</div>
<table class="table table-condensed table-hover tablesorter" id="table-conventions">
    {{#each this}}
        {{#if @first}}
            <thead>
    <tr>
        <th class="sorter-false" rowspan="2">
        <input type='checkbox' data-toggle='checkbox' class='icheckbox_flat check_all'/>
        </th>
        <th rowspan="2">Student</th>
        <th rowspan="2">Promotion</th>
        <th rowspan="2">Major</th>
        <th rowspan="2" class="sorter-false">Supervisor</th>
        <th rowspan="2" >Tutor</th>
        <th class="sorter-false text-center" colspan="{{len Reports}}">Reports</th>
        <th rowspan="2" >Def</th>
    </tr>
    <tr>        
        {{#each Reports}}        
        <th>{{shortKind this}}</th>
        {{/each}}        
    </tr>
    </thead>
    <tbody>
    {{/if}}
        <tr>
            <td>
            <input type='checkbox' class='icheckbox_flat' data-email='{{Student.Email}}'/>  
            </td>
            <td>
            <a class='click fn' onclick="showInternship('{{Student.Email}}')">{{fullname Student}}</a>
            </td>
            <td>{{Promotion}}</td>
            <td>{{Major}}</td>
            <td>                
                <a class="fn" href='mailto:{{Sup.Email}}' title='{{fullname Sup}}'>{{fullname Sup}}</a>
            </td>
            <td>                
                <a class="fn" href='mailto:{{Tutor.Email}}' title='{{fullname Tutor}}'>{{fullname Tutor}}</a>
            </td>            
            {{#each Reports}}
            <td class="click {{reportStatus this}} text-center" data-text="{{this.Grade}}" onclick="showReport('{{../Student.Email}}', '{{Kind}}')">            
            {{reportGrade this}}
            </td>            
            {{/each}}
            <td>-</td>
        </tr>
    {{/each}}
    </tbody>
</table>
{{else}}
    <h5 class="text-center">No internships to watch</h5>
{{/if}}