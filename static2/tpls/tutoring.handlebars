{{#if this}}
<h3>{{len this}} internships
<button type="button" class="btn btn-primary" onclick="mailing()">
    <i class="glyphicon glyphicon-envelope"></i>
    mail selection
</button>
</h3>

<p>
Click on a student to get more information about the internship.
</p>
<p>
Click on a report to review and grade it.
In some situations, it might be justified to extend the deadline.
If you want to do so, please notify the internships manager.
</p>
<div class="legend">
<span class="title">Reports color legend</span>
<ul class="legend">
<li><span class="color btn-warning"></span>Deadline passed, no report</li>
<li><span class="color btn-primary"></span>Deadline passed, waiting for being reviewed</li>
<li><span class="color btn-success"></span>grade > 10</li>
<li><span class="color btn-danger"></span>grade < 10</li>
</ul>
</div>
<table class="table table-hover tablesorter" id="table-conventions">
    {{#each this}}
        {{#if @first}}
            <thead>
    <tr>
        <th class="sorter-false" rowspan="2">
        <input type='checkbox' data-toggle='checkbox' class='icheckbox_flat check_all'/>
        </th>
        <th rowspan="2">Student</th>
        <th rowspan="2">Promotion</th>
        <th rowspan="2">Major</th>
        <th rowspan="2" class="sorter-false">Supervisor</th>
        <th rowspan="2" class="sorter-false">Company</th>
        <th class="sorter-false text-center" colspan="{{len Reports}}">Reports</th>
        <th rowspan="2" >Def</th>
    </tr>
    <tr>        
        {{#each Reports}}        
        <th>{{shortKind this}}</th>
        {{/each}}        
    </tr>
    </thead>
    <tbody>
    {{/if}}
        <tr>
            <td>
            <input type='checkbox' class='icheckbox_flat' data-email='{{Student.Email}}'/>  
            </td>
            <td>
            <a class='click fn' onclick="showInternship('{{Student.Email}}')">{{fullname Student}}</a>
            </td>
            <td>{{Promotion}}</td>
            <td>{{Major}}</td>
            <td>                
                <a class="fn" href='mailto:{{Sup.Email}}' title='{{fullname Sup}}'>{{fullname Sup}}</a>
            </td>
            <td>                
                {{company Cpy}}
            </td>            
            {{#each Reports}}
            <td class="{{reportStatus this}} text-center" data-text="{{this.Grade}}" onclick="showReport('{{../Student.Email}}', '{{Kind}}')">            
            {{reportGrade this}}
            </td>            
            {{/each}}
            <td>-</td>
        </tr>
    {{/each}}
    </tbody>
</table>
{{else}}
    <h5 class="text-center">You are not tutoring any internships</h5>
{{/if}}