<div class="modal-dialog modal-lg">
    <div class="modal-content">
    <div class="modal-header">
            <h3 class="modal-title fn">{{fullname I.Student}}</h3>
    </div>    
    <div class="modal-body form-horizontal">
            <dl class="dl-horizontal">
                <dt>email</dt>
                <dd><a href="mailto:{{I.Student.Email}}">{{I.Student.Email}}</a></dd>
                <dt>tel</dt>
                <dd>{{I.Student.Tel}}</dd>
                <dt>promotion</dt>
                <dd>{{I.Promotion}}</dd>
                <dt>major</dt>
                <dd>
                    {{#if Major}}
                    <select class="select-major">
                        {{majorOptions I.Major}}
                    </select>
                    {{else}}
                    {{I.Major}}
                    {{/if}}
                </dd>                
                <dt>academic tutor</dt>                
                <dd class="fn">
                    {{#if Admin}}
                        <select class="select-tutor">{{userSelecter Tutors}}</select>                    
                    {{else}}
                    <a href="mailto:{{I.Tutor.Email}}">{{fullname I.Tutor}} ({{I.Tutor.Tel}})</a>
                    {{/if}}
                </dd>
            </dl>

            <h4 class="text-center">{{company I.Cpy}}</h4>
            <dl class="dl-horizontal">
                <dt>period</dt>
                <dd>{{dateFmt I.Begin "D MMM YYYY"}} to {{dateFmt I.End "D MMM YYYY"}}</dd>
                <dt>supervisor</dt>
                <dd>
                    <a class="fn" href="mailto:{{I.Sup.Email}}">{{fullname I.Sup}}</a>
                    ({{I.Sup.Tel}})
                </dd>                
            </dl>
            {{#if SurveyAdmin}}
            <h4 class="text-center">Links for the surveys</h4>
            <p>These links must be send to the supervisors to provide feedbacks:</p>            
            <dl class="dl-horizontal">
                {{#each I.Surveys}}
                <dt>{{Kind}}</dt>
                <dd>{{../URL}}{{Kind}}?token={{Token}} (<a class='click' onclick="tplEvaluationMail('{{Kind}}','{{../../I.Student.Email}}','{{../URL}}{{Kind}}?token={{Token}}')"><i class='glyphicon glyphicon-envelope'> </i> premade e-mail</a>)</dd>
                {{/each}}
            </dl>
            {{/if}}
            <h4 class="text-center">Future position</h4>
            <dl class="dl-horizontal">        
                <dt>Next position</dt>
                <dd>{{nextPosition I.Future.Position}}</dd>
                <dt>Contact email</dt>
                <dd>{{nextContact I.Future.Contact}}</dd>
            </dl>
    </div>
    <div class="modal-footer"></div>
    </div>
</div>