<div style="@media print{@page {size: landscape}}">
{{#if this}}
<h1 class="text-center">Nothing for the moment. Stay tuned.</h1>
{{else}}
{{#each this}}
<h3 class="text-center">{{longDate this.Date}}</h3>
<h4>Salle: {{Room}}</h4>
<h4>Jury:
<small>
{{#if Juries}}
	{{#each Juries}}
	<span class="fn">{{fullname this}}</span>{{#unless @last}}, {{/unless}}
	{{/each}}
{{else}}
	<span class="fn">TBA.</span>
{{/if}}	
</small>
</h4>
<h4>Agenda</h4>
<div style="page-break-after: always;"> 
	{{#each Defenses}}
		<div>
		<div class="offset">{{offset ../Date Offset}}</div>
		<div class="cnt">
			<span class="header"><span class="fn">{{fullname Student}}</span> [{{Major}}]</span>
			<p class="descr">{{Company}}. <i>{{Title}}.</i></p>	
		</div>
		</div>
	{{/each}}
</div>
{{/each}}
</div>
{{/if}}