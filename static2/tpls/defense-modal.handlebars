<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title fn">{{fullname Student}}</h3>
        </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Presence</label>                        
                        <p class="form-control-static">                                
                            {{#if Remote}}Virtual{{else}}Physical{{/if}}                                
                        </p>                        
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Audience</label>                        
                        <p class="form-control-static">
                            {{#if Private}}Private{{else}}Public{{/if}}                                
                        </p>                        
                    </div>                   
                    <div class="form-group">
                        <label for="grade" class="col-sm-3 control-label">Grade</label>
                        <div class="col-sm-3">
                            <div class="input-group">
                            <input type="number" class="form-control" id="grade" value="{{gradeInput this}}" {{#unless Gradeable}}disabled="disabled"{{/unless}} />                                
                            <span class="input-group-btn">
                            <button type="button" onclick="gradeDefense('{{Student.Email}}')" class="btn btn-danger"><i class="glyphicon glyphicon-floppy-disk"></i></button>
                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                    <label for="position" class="col-sm-3 control-label">Next position</label>
                    <select id='select-position'>
                    {{positionSelector Future.Position}}
                    </select>
                    <button type="button" class="btn btn-danger"><i class="glyphicon glyphicon-floppy-disk"></i></button>
                    </div>
                </div>            
            </div>
            <div class="modal-footer"></div>
    </div>    
</div>