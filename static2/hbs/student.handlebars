<div class="modal-dialog modal-lg">
    <div class="modal-content">
    <div class="modal-header">
            <h3 class="modal-title fn">{{fullname I.Student}}</h3>
    </div>    
    <div class="modal-body form-horizontal">
            <dl class="dl-horizontal">
                <dt>email</dt>
                <dd><a href="mailto:{{I.Student.Email}}">{{I.Student.Email}}</a></dd>
                <dt>tel</dt>
                <dd>{{I.Student.Tel}}</dd>
                <dt>promotion / major</dt>
                <dd>{{I.Promotion}} / {{I.Major}}</dd>
                </dd>                
            </dl>

            <h4 class="text-center">{{company I.Cpy}}</h4>
            <dl class="dl-horizontal">
                <dt>period</dt>
                <dd>{{dateFmt I.Begin "D MMM YYYY"}} to {{dateFmt I.End "D MMM YYYY"}}</dd>
                <dt>supervisor</dt>
                <dd>
                    <a class="fn" href="mailto:{{I.Sup.Email}}">{{fullname I.Sup}}</a>
                    ({{I.Sup.Tel}})
                </dd>
                                <dt>academic tutor</dt>                
                <dd class="fn">
                <a href="mailto:{{I.Tutor.Email}}">{{fullname I.Tutor}}</a> ({{I.Tutor.Tel}})
                </dd>
                
            </dl>
            {{#if SurveyAdmin}}
            <h4 class="text-center">Links for the surveys</h4>
            <p>These links must be send to the supervisors to provide feedbacks:</p>            
            <dl class="dl-horizontal">
                {{#each I.Surveys}}
                <dt>{{Kind}}</dt>
                <dd>{{../URL}}{{Kind}}?token={{Token}} (<a class='click' onclick="tplEvaluationMail('{{Kind}}','{{../../I.Student.Email}}','{{../URL}}{{Kind}}?token={{Token}}')"><i class='glyphicon glyphicon-envelope'> </i> premade e-mail</a>)</dd>
                {{/each}}
            </dl>
            {{/if}}
            {{#if I.Defense.Defenses}}
            <h4 class="text-center">Defense</h4>
            <dl class="dl-horizontal">
                <dt><i class="glyphicon glyphicon-calendar"></i></dt>
                <dd>                                
                    {{offset_local I.Defense.Date I.Defense.Mine.Offset}}</dd>                
                <dt><i class="glyphicon glyphicon-map-marker"></i></dt>
                <dd>{{I.Defense.Room}}</dd>
                <dt>Juries</dt>
                <dd>
                {{#each I.Defense.Juries}}
                    <a href="mailto:{{Email}}" class="fn">{{Firstname}} {{Lastname}}</a>{{#unless @last}}, {{/unless}}
                {{/each}}
                </dd>
                {{#if I.Defense.Privileges}}
                <dt>Privileges</dt>
                <dd>                                
                {{#if I.Defense.Mine.Remote}}<i class="glyphicon glyphicon-facetime-video"></i> visio; {{/if}}
                {{#if I.Defense.Mine.Private}}<i class="glyphicon glyphicon-eye-close"></i> confidential{{/if}}                
                </dd>
                {{/if}}
            </dl>        
            {{/if}}    
            <h4 class="text-center">Future position</h4>
            <dl class="dl-horizontal">        
                <dt>Next position</dt>
                <dd>{{nextPosition I.Future.Position}}</dd>
                <dt>Contact email</dt>
                <dd>{{nextContact I.Future.Contact}}</dd>
            </dl>
    </div>
    <div class="modal-footer"></div>
    </div>
</div>