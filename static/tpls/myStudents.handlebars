{{#if this}}
    <h3>{{len this}} tutored students</h3>

    <a class="btn-sm btn-primary mail-selection"><span class="fui-mail"></span> mail selection</a>
    <table class="table table-condensed table-hover tablesorter" id="table-myStudents">
        <thead>
        <tr>
            <th rowspan="2" class="sorter-false"><label class='checkbox mailto-students'><input type='checkbox' data-toggle='checkbox'/></label></th>
            <th rowspan="2">Student</th>
            <th rowspan="2">Promotion</th>
            <th rowspan="2">Major</th>
            <th rowspan="2">Company</th>
            <th class="sorter-false">
                <label class='checkbox mailto-sups'>
                    <input type='checkbox' data-toggle='checkbox'/>
                </label>
                Supervisor
            </th>
            <th class="sorter-false rotate"><div><span>Midterm eval.</span></div></th>
            <th class="sorter-false rotate"><div><span>Final eval.</span></div></th>
            <th class="sorter-false rotate"><div><span>Supervisor eval.</span></div></th>
            <th class="sorter-false rotate"><div><span>Defense</span></div></th>
        </tr>
        </thead>
        <tbody>
            {{#each this}}
                <tr>
                    <td>
                        <label class='checkbox mail-checkbox mail-checkbox-stu' data-email="{{Stu.P.Email}}">
                            <input type='checkbox' class="mail-checkbox-students" data-toggle='checkbox' value='{{Stu.P.Email}}'/>
                        </label>
                    </td>
                    <td><a class='clickable' onclick="showDetails('{{Stu.P.Email}}')">{{shortFullname Stu.P}}</a></td>
                    <td>{{Stu.Promotion}}</td>
                    <td>{{Stu.Major}}</td>
                    <td>{{shortCompany this}}</td>
                    <td>
                        <label class='checkbox mail-checkbox mail-checkbox-s' data-email="{{Sup.Email}}">
                            <input type='checkbox' class="mail-checkbox-sup" data-toggle='checkbox' value='{{Sup.Email}}'/>
                        </label>
                        <a href='mailto:{{Sup.Email}}' title='{{fullname Sup}}'>{{shortFullname Sup}}</a>
                    </td>
                    <td>{{reportGrade MidtermReport}}</td>
                    <td>{{reportGrade FinalReport}}</td>
                    <td>{{reportGrade SupReport}}</td>
                    <td>{{grade Defense.Grade}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
        <h5 class="text-center">No tutored students</h5>
    {{/if}}