<h5>Global properties</h5>
<div class="form-horizontal">
    <div id="profileEditor-password-err"></div>
    <div class="form-group">
        <label for="lbl-nbSlots" class="col-sm-1 control-label">Slots</label>
        <div class="col-sm-1">
            <input type="number" class="form-control input-sm" id="lbl-nbSlots" value="{{len sessions}}"/>
        </div>
        <label for="lbl-filter" class="col-sm-1 control-label">Filter</label>
        <div class="col-sm-6">
            <input onchange="filterConventions()" type="text" class="form-control input-sm" id="lbl-filter" value="{{filter}}"/><span id="lbl-filter-infos"></span>
        </div>
        <div class="text-center col-sm-3">
            <button class="btn btn-success" onclick="prepareSchedule()">Generate template</button>
            <button class="btn btn-primary" onclick="resetDefense()">Reset</button>
        </div>
    </div>

    <div id="defenses-form">
        <div class="text-center">Waiting for a template ...</div>
    </div>
</div>